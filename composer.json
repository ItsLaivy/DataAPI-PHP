{
  "name": "itslaivy/dataapi-php",
  "type": "library",
  "description": "A powerful database API manager easy-to-use",
  "authors": [
    {
      "name": "Daniel Richard S. Meinicke",
      "homepage": "https://laivy.codes/u/itslaivy",
      "email": "dnlfg.contato@gmail.com",
      "role": "Main Developer"
    }
  ],
  "config": {
    "vendor-dir": "src/vendor/"
  },
  "require": {
    "php": ">=8.1",
    "ext-mysqli": "*",
    "ext-sqlite3": "*"
  },
  "autoload": {
    "psr-4": {
      "ItsLaivy\\DataAPI-PHP\\": "src/"
    },
    "files": [
      "src/modules/query/DataResult.php",
      "src/modules/query/DataStatement.php",

      "src/modules/sql/mysql/MySQLDatabase.php",
      "src/modules/sql/mysql/MySQLDatabaseType.php",
      "src/modules/sql/mysql/MySQLResult.php",
      "src/modules/sql/mysql/MySQLStatement.php",

      "src/modules/sql/sqlite/SQLiteDatabase.php",
      "src/modules/sql/sqlite/SQLiteDatabaseType.php",
      "src/modules/sql/sqlite/SQLiteResult.php",
      "src/modules/sql/sqlite/SQLiteStatement.php",

      "src/modules/variables/ActiveVariable.php",
      "src/modules/variables/InactiveVariable.php",

      "src/modules/Database.php",
      "src/modules/DatabaseType.php",
      "src/modules/Receptor.php",
      "src/modules/Table.php",
      "src/modules/Variable.php",

      "src/DataAPI.php",
      "src/ExceptionHandler.php"
    ]
  },
  "license": "MIT"
}
